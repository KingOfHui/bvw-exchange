<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.darknet.bvw.model.response.MineralListResponse.ItemsBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_mineral"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_margin="@dimen/dimen_15dp"
            android:src="@mipmap/ic_launcher"/>
            
        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/tv_mineral_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text= "156446156"
            app:layout_constraintLeft_toRightOf="@id/iv_mineral"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/tv_mineral_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_mineral_name"
            app:layout_constraintLeft_toRightOf="@id/iv_mineral"
            tools:text="fjslfjdsl"
            />
        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/tv_mineral_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_mineral_name"
            app:layout_constraintLeft_toRightOf="@id/tv_mineral_label1"
            tools:text="fjslfjdsl"
            />
        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/tv_mineral_whole_hashrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_mineral_label1"
            app:layout_constraintLeft_toRightOf="@id/iv_mineral"
            tools:text="fjslfjdsl"
            />
        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/tv_mineral_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_mineral_label1"
            app:layout_constraintLeft_toRightOf="@id/tv_mineral_whole_hashrate"
            tools:text="fjslfjdsl"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>