<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_pel_list_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@mipmap/icon_head_default"
        fresco:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_pel_list_header"
        >
        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/item_people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="10dp"
            android:text="Bitcoin"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:typeface="@string/universal_text_typeface" />

        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/item_people_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_toRightOf="@id/item_pel_list_header"
            android:text="3345.00"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:typeface="@string/universal_text_typeface" />

    </LinearLayout>




    <View
        android:id="@+id/item_people_line_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/item_pel_list_header"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="#575669"></View>


</RelativeLayout>
