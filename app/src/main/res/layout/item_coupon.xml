<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dimen_20dp"
    android:paddingBottom="@dimen/dimen_20dp"
    android:paddingStart="@dimen/dimen_15dp"
    android:paddingEnd="@dimen/dimen_15dp"
    android:background="@drawable/shape_circle_rect_order">

    <ImageView
        android:id="@+id/ivCoupon"
        android:layout_width="65dp"
        android:layout_height="75dp"
        android:src="@mipmap/img_coupon_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5"
        android:text="5"
        app:layout_constraintTop_toTopOf="@id/ivCoupon"
        app:layout_constraintStart_toStartOf="@id/ivCoupon"
        app:layout_constraintEnd_toEndOf="@id/ivCoupon"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:id="@+id/tvValue"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cash_coupon"
        android:textColor="@mipmap/back"
        android:textSize="@dimen/dp_10"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ivCoupon"
        app:layout_constraintEnd_toEndOf="@id/ivCoupon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_5dp"
        />
    <ImageView
        android:id="@+id/ivBiw"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@mipmap/icon_biw_brand"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专享现金券"
        android:id="@+id/tvCouponName"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/ivCoupon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 BIW 即可购买"
        android:id="@+id/tvBiwBuy"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/ivCoupon"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>