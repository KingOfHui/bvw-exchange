<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#232233">


    <ImageView
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="@dimen/dimen_25dp"
        android:padding="3dp"
        android:src="@mipmap/icon_close"
        android:id="@+id/ivClose"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60"
        android:text="转账"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        />
    <View style="@style/Line_White_02"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="转入数量"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:id="@+id/tvAmountTip"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:textSize="@dimen/dimen_15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        app:layout_constraintTop_toBottomOf="@id/tvAmountTip"
        app:layout_constraintStart_toStartOf="@id/tvAmountTip"
        android:id="@+id/etAmount"
        android:inputType="numberDecimal"
        android:maxLength="32"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:background="@null"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:hint="请输入转入数量"
        android:textColorHint="#C7C7C7"
        />

    <View style="@style/Line_White_02"
        app:layout_constraintTop_toBottomOf="@id/etAmount"
        app:layout_constraintStart_toStartOf="@id/etAmount"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        app:layout_constraintEnd_toEndOf="@id/etAmount"
        />
    <TextView
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:text="支付密码"
        android:id="@+id/tvPayWayTip"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_15dp"
        app:layout_constraintTop_toBottomOf="@id/etAmount"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_15dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:id="@+id/etPwd"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@id/tvAmountTip"
        app:layout_constraintEnd_toEndOf="@id/etAmount"
        app:layout_constraintTop_toBottomOf="@id/tvPayWayTip"
        android:gravity="center_vertical"
        android:maxLength="32"
        android:background="@null"
        android:hint="请输入支付密码"
        android:textColorHint="#C7C7C7"

        />
    <View style="@style/Line_White_02"
        app:layout_constraintTop_toBottomOf="@id/etPwd"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        />

    <TextView
        android:id="@+id/tvPay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/shape_circle_rect_black"
        android:backgroundTint="@color/_01FCDA"
        android:gravity="center"
        android:text="@string/pay_now"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPwd" />



</androidx.constraintlayout.widget.ConstraintLayout>