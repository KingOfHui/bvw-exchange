<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColorPrimary"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/fund_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/lay_head_back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="20dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hz_top_sign"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/hz_money_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(BTC)"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#37314D"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/huazhang_line_img"></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:paddingRight="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/huazhang_top_view_item_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="@string/hz_top_from"
                                android:textSize="10dp"
                                android:textColor="#FF8B8B90"></TextView>

                            <TextView
                                android:id="@+id/huazhang_top_view_item_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/huazhang_top_view_item_one"
                                android:text="@string/hz_jiaoyi_suo_sign"
                                android:textSize="10dp"
                                android:textColor="@color/white"></TextView>


                            <TextView
                                android:id="@+id/huazhang_top_view_item_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:visibility="gone"
                                android:layout_toRightOf="@id/huazhang_top_view_item_two"
                                android:text="1Bxnf***ficg"
                                android:textSize="10dp"
                                android:textColor="@color/white"></TextView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/huazhang_enter_right"></ImageView>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/common_line_color"></View>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/huazhang_bom_view_item_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="@string/hz_top_to"
                                android:textSize="10dp"
                                android:textColor="#FF8B8B90"></TextView>

                            <TextView
                                android:id="@+id/huazhang_bom_view_item_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/huazhang_bom_view_item_one"
                                android:text="@string/hz_myqianbao_sign"
                                android:textSize="10dp"
                                android:textColor="@color/white"></TextView>

                            <TextView
                                android:id="@+id/huazhang_bom_view_item_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/huazhang_bom_view_item_two"
                                android:text="XFv9A***pwXF"
                                android:textSize="10dp"
                                android:visibility="gone"
                                android:textColor="@color/white"></TextView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"></ImageView>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/huangzhang_change_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:alpha="0.5"
                        android:background="#FF1F1B2C"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/huazhang_change_img"></ImageView>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#37314D"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hz_money_num_sign"
                        android:textColor="@color/white"
                        android:textSize="18dp"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/common_line_color"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/shense_bg_fang">

                        <EditText
                            android:id="@+id/huangzhang_num_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:numeric="decimal"
                            android:hint="@string/hz_input_num_sign"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray1"
                            android:textSize="12dp"></EditText>

                        <TextView
                            android:id="@+id/huazhang_input_all_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="@string/hz_input_all_sign"
                            android:textColor="@color/white"
                            android:textSize="12dp"></TextView>

                        <View
                            android:id="@+id/huazhang_input_line_txt"
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/huazhang_input_all_txt"
                            android:background="@color/white"></View>

                        <TextView
                            android:id="@+id/huazhang_input_usdt_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/huazhang_input_line_txt"
                            android:text="USDT"
                            android:textColor="@color/gray1"
                            android:textSize="12dp"></TextView>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/jiaoyisuo_leftmoney_notice_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@mipmap/notice_left_money_img"
                        android:drawablePadding="6dp"
                        android:visibility="gone"
                        android:textColor="#01FCDA"
                        android:textSize="12dp"></TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/left_money_notice_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hz_jiaoyisuo_left_money"
                            android:textColor="@color/white"
                            android:textSize="14dp"></TextView>

                        <TextView
                            android:id="@+id/hz_left_money_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00000000 USDT"
                            android:textColor="@color/white"
                            android:textSize="14dp"></TextView>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="40dp"
                        android:lineSpacingExtra="6dp"
                        android:text="@string/hz_notice_sign"
                        android:textColor="@color/gray1"
                        android:textSize="12dp"></TextView>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="25dp">

                    <TextView
                        android:id="@+id/hz_submit_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/green_bg"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/fenlie_huazhang_submit"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                </RelativeLayout>


                <!-- webview 演示web调用Java -->
                <com.github.lzyzsd.jsbridge.BridgeWebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></com.github.lzyzsd.jsbridge.BridgeWebView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
