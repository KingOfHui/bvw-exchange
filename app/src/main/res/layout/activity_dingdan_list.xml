<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColorPrimary"
    android:orientation="vertical">

    <include layout="@layout/lay_head_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@mipmap/about_us_sign"></ImageView>

            <com.darknet.bvw.view.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="BIW"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:typeface="@string/universal_text_typeface" />


            <com.darknet.bvw.view.TypefaceTextView
                android:id="@+id/about_version_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="V"
                android:textColor="@color/gray2"
                android:textSize="14dp"
                app:typeface="@string/universal_text_typeface" />


            <com.darknet.bvw.view.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:lineSpacingExtra="5dp"
                android:text="@string/about_us_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:typeface="@string/universal_text_typeface" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
