<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_181523">

        <include layout="@layout/lay_head_back_binding"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textColor="@color/color_00FFD9"
                android:textSize="@dimen/dimen_18dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvCoinName"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日收益：0.000000094 BTC"
                android:textColor="@color/color_00FFD9"
                app:layout_constraintTop_toBottomOf="@id/tvCoinName"
                android:id="@+id/tvBonusToday"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="···"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_20dp"
                android:textColor="@color/color_00FFD9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvCoinName"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:id="@+id/tvMore"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBalance"
                app:layout_constraintTop_toBottomOf="@id/tvBonusToday"
                android:text="0.04175011"
                app:layout_constraintEnd_toEndOf="@id/tvMore"
                android:textColor="@color/color_00FFD9"
                android:textSize="@dimen/dp_22"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCny"
                app:layout_constraintTop_toBottomOf="@id/tvBalance"
                android:text="≈$1742.01"
                app:layout_constraintEnd_toEndOf="@id/tvMore"
                android:textColor="@color/color_00FFD9"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:textSize="@dimen/dp12"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>