<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2f2a45"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:alpha="0.8">


    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_10dp">

        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_trade_state_notice"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold"
            app:typeface="@string/universal_text_typeface" />

        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/msg_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt"
            android:textColor="@color/lightBlue"
            android:textSize="13dp"
            android:textStyle="bold"
            app:typeface="@string/universal_text_typeface" />

        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/txt_zz_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_toLeftOf="@id/msg_time_view"
            android:layout_toRightOf="@+id/msg_title_view"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/lightBlue"
            android:textSize="13dp"
            android:textStyle="bold"
            app:typeface="@string/universal_text_typeface" />


        <com.darknet.bvw.view.TypefaceTextView
            android:id="@+id/msg_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/txtGray"
            android:textSize="10dp"
            app:typeface="@string/universal_text_typeface" />

    </RelativeLayout>

    <com.darknet.bvw.view.TypefaceTextView
        android:id="@+id/msg_receive_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="@color/txtGray"
        android:textSize="10dp"
        app:typeface="@string/universal_text_typeface" />

    <View
        android:id="@+id/msg_receive_line_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/msg_receive_view"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/common_line_color" />

</RelativeLayout>
