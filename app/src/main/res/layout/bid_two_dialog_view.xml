<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_line_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bid_dialog_select_view"></ImageView>


    <com.darknet.bvw.view.TypefaceTextView
        android:id="@+id/dialog_fail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:lineHeight="25dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:typeface="@string/universal_text_typeface" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bind_sign_dialog_bg"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@mipmap/bid_logo_sign"
            android:drawablePadding="5dp"
            android:text="立即开通BID"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>


</LinearLayout>
