<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shendu_maipan_sign"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shendu_shuliang_sign"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/depth_bi_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(BVW)"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shendu_jiage_sign"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/depth_price_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(USDT)"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shendu_shuliang_sign"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/depth_bi_type_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(TT)"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shendu_maichu_sign"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.darknet.bvw.view.MyListView
                android:id="@+id/depth_out_lv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:divider="@null"
                android:layout_weight="1" />

            <com.darknet.bvw.view.MyListView
                android:id="@+id/depth_in_lv"
                android:layout_width="0dp"
                android:divider="@null"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>