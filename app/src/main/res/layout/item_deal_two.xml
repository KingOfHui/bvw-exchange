<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1"
    android:orientation="horizontal">



        <TextView
            android:id="@+id/deal_item_time_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="11:20:42"
            android:textColor="#ffffffff"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/deal_item_status_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="卖出"
            android:textColor="#FC6767"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/deal_item_price_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="435.07"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/deal_item_show_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0.071600"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

</LinearLayout>