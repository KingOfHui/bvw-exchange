<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232233">


    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="@dimen/dimen_25dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:padding="3dp"
        android:src="@mipmap/icon_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60"
        android:gravity="center"
        android:text="@string/pledge"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/Line_White_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvAmountTip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center_vertical"
        android:text="@string/mineral_pledge_num"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:maxLength="32"
        android:textColor="#15D496"
        android:textColorHint="#C7C7C7"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@id/tvAmountTip"
        app:layout_constraintTop_toBottomOf="@id/tvAmountTip" />

    <View
        style="@style/Line_White_02"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        app:layout_constraintEnd_toEndOf="@id/tvAmount"
        app:layout_constraintStart_toStartOf="@id/tvAmount"
        app:layout_constraintTop_toBottomOf="@id/tvAmount" />

    <TextView
        android:id="@+id/tvPayWayTip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center_vertical"
        android:text="@string/password"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAmount" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/lead_in_sure_pwd"
        android:inputType="textPassword"
        android:maxLength="32"
        android:textColor="@color/white"
        android:textColorHint="#C7C7C7"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@id/tvAmount"
        app:layout_constraintStart_toStartOf="@id/tvAmountTip"
        app:layout_constraintTop_toBottomOf="@id/tvPayWayTip"

        />

    <View
        style="@style/Line_White_02"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPwd" />

    <TextView
        android:id="@+id/tvSure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/shape_circle_rect_black"
        android:backgroundTint="#15D496"
        android:gravity="center"
        android:text="@string/sure_sure"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPwd" />


</androidx.constraintlayout.widget.ConstraintLayout>