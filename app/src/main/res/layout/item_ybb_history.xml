<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvInOutType"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transfer_in"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/dimen_20dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tagNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number"
        android:textSize="14sp"
        android:textColor="#C7C7C7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvInOutType"
        app:layout_constraintStart_toStartOf="@id/tvInOutType"
        />
    <TextView
        android:id="@+id/tagTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textSize="14sp"
        android:textColor="#C7C7C7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvInOutType"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvNumber"
        app:layout_constraintTop_toBottomOf="@id/tagTime"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4000 BTC"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tvTime"
        app:layout_constraintTop_toBottomOf="@id/tagTime"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04:56 04/15"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    <View
        app:layout_constraintTop_toBottomOf="@id/tvNumber"
        android:layout_marginTop="22dp"
        android:background="#333333"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>