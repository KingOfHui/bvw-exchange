<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:alpha="0.9"
        android:background="@drawable/zc_main_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layMsgCenter"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/dimen_50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:src="@mipmap/img_msg_center" />

            <com.darknet.bvw.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="@string/mine_msg_center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:typeface="@string/universal_text_typeface" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@color/colorLineGray"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/layContact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:visibility="gone">

            <com.darknet.bvw.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="@string/mine_contact_people"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:typeface="@string/universal_text_typeface" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:visibility="gone"
            android:background="@color/colorLineGray" />

        <LinearLayout
            android:id="@+id/lay_address_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:src="@mipmap/img_contact" />

            <com.darknet.bvw.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="@string/mine_contact_people"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:typeface="@string/universal_text_typeface" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@color/colorLineGray" />

        <LinearLayout
            android:id="@+id/laySystemSetting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:src="@mipmap/img_system_setting" />

            <com.darknet.bvw.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="@string/mine_system_set"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:typeface="@string/universal_text_typeface" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:alpha="0.9"
        android:background="@drawable/zc_main_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layHelpCenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:src="@mipmap/img_help_center" />

            <com.darknet.bvw.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="@string/mine_help_center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:typeface="@string/universal_text_typeface" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@color/colorLineGray" />

        <LinearLayout
            android:id="@+id/layAboutUs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:src="@mipmap/img_about_us" />

            <com.darknet.bvw.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="@string/mine_about_us"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:typeface="@string/universal_text_typeface" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
