<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:background="#211D31"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="82dp">
        <TextView
            android:id="@+id/home"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="首页"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/icon_white_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shopping"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/home"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="购物车"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/icon_white_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.darknet.bvw.view.CornerTextView
            android:id="@+id/shopping_num"
            app:layout_constraintLeft_toLeftOf="@id/shopping"
            app:layout_constraintTop_toTopOf="@id/shopping"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:corner="16dp"
            app:color="#01FCDA"
            android:textSize="10sp"
            android:text="99"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <com.darknet.bvw.view.CornerTextView
            android:id="@+id/btn_join_shopping_cart"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shopping"
            app:layout_constraintRight_toLeftOf="@id/btn_shopping_now"
            android:layout_marginLeft="16dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="加入购物车"
            app:corner_left_top="2dp"
            app:corner_left_bottom="2dp"
            app:color="#01FCDA"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="44dp"/>
        <com.darknet.bvw.view.CornerTextView
            android:id="@+id/btn_shopping_now"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_join_shopping_cart"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="立即购买"
            app:corner_right_top="2dp"
            app:corner_right_bottom="2dp"
            app:color="#8236FF"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="44dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <jingui.android.toolbar.StatusBarView
                android:background="#14121C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:background="#14121C"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#232233">
                <TextView
                    android:id="@+id/tv_title"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:maxLines="2"
                    android:text="牛仔短裤女夏新款韩版宽松显瘦阔腿高腰"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:textColor="#01FCDA"
                    android:textSize="20sp"
                    android:text="USDT"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_price"
                    app:layout_constraintBottom_toBottomOf="@id/tv_unit"
                    app:layout_constraintLeft_toRightOf="@id/tv_unit"
                    android:layout_marginLeft="5dp"
                    android:textColor="#01FCDA"
                    android:textSize="26sp"
                    android:text="206.00"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_number"
                    app:layout_constraintBottom_toBottomOf="@id/tv_unit"
                    app:layout_constraintLeft_toRightOf="@id/tv_price"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#AAAAB0"
                    android:textSize="14sp"
                    android:text="月销5000+"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/share"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toTopOf="@id/tv_price"
                    app:layout_constraintBottom_toBottomOf="@id/tv_price"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="35dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:text="分享"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/icon_white_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/line_1"
                    app:layout_constraintTop_toBottomOf="@id/tv_price"
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:id="@+id/click_discount"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toBottomOf="@id/line_1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="53dp">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="可用现金券"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.darknet.bvw.view.CornerTextView
                        android:id="@+id/tv_discount"
                        android:layout_marginLeft="20dp"
                        android:padding="5dp"
                        app:corner="2dp"
                        app:color="#01FCDA"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="30现金券"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@mipmap/icon_more_h"
                        android:padding="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:id="@+id/line_2"
                    app:layout_constraintTop_toBottomOf="@id/click_discount"
                    android:layout_marginLeft="15dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/line_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <TextView
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="选择规格"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="#7FFFFFFF"
                        android:textSize="12sp"
                        android:layout_marginRight="14dp"
                        android:text="3种规格可选"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/icon_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <ImageView
                android:id="@+id/what"
                android:layout_width="match_parent"
                android:layout_height="584dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <jingui.android.toolbar.ToolBarContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_marginStart="15dp"
            android:padding="15dp"
            android:src="@mipmap/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </jingui.android.toolbar.ToolBarContainer>
</RelativeLayout>