<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#181523"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_circle_rect_search"
                android:paddingLeft="10dp"
                android:drawableLeft="@mipmap/search_2"
                android:layout_weight="1"
                android:hint="医用防护、口罩、手套"
                android:textColorHint="#686672"
                android:drawablePadding="10dp"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="32dp"/>
            <TextView
                android:id="@+id/cancel"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="15dp"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:text="热门搜索"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.qmuiteam.qmui.widget.QMUIFloatLayout
        android:id="@+id/float_layout"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.qmuiteam.qmui.widget.QMUIFloatLayout>
</LinearLayout>