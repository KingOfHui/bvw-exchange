<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:loadingView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_110dp"
        android:layout_height="@dimen/dimen_110dp"
        android:layout_gravity="center"
        android:background="@drawable/progress_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.darknet.bvw.view.LoadingView
            android:id="@+id/loadingView"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_25dp"
            loadingView:loadding_color="@color/white"
            loadingView:progress_style="material" />

        <com.darknet.bvw.view.TypefaceTextView
            app:typeface="@string/universal_text_typeface"
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_13dp" />

    </LinearLayout>
</LinearLayout>