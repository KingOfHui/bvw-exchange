<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.darknet.bvw.qvkuaibao.vm.PosCoinDetailViewModel" />
        <variable
            name="adapter"
            type="com.darknet.bvw.qvkuaibao.adapter.BonusListAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#272436">

        <include layout="@layout/lay_head_back_binding"
            android:id="@+id/title_layout"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:textColor="@color/white"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@id/title_layout"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:layout_marginStart="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvSymbol"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨日收益"
            android:id="@+id/tvBonusTodayTip"
            app:layout_constraintTop_toBottomOf="@id/tvSymbol"
            app:layout_constraintStart_toStartOf="@id/tvSymbol"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:textColor="@color/white"
            android:alpha="0.5"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史总收益"
            android:layout_marginEnd="@dimen/dimen_50dp"
            app:layout_constraintTop_toTopOf="@id/tvBonusTodayTip"
            android:id="@+id/tvAllBonusTip"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:alpha="0.5"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvBonusTodayTip"
            app:layout_constraintStart_toStartOf="@id/tvBonusTodayTip"
            app:layout_constraintEnd_toEndOf="@id/tvBonusTodayTip"
            android:id="@+id/tvBonusToday"
            android:text="0.044545"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvAllBonusTip"
            app:layout_constraintEnd_toEndOf="@id/tvAllBonusTip"
            app:layout_constraintStart_toStartOf="@id/tvAllBonusTip"
            android:id="@+id/tvAllBonus"
            android:text="0.044545"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textColor="@color/white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:id="@+id/sp"
            android:layout_marginTop="@dimen/dp_22"
            app:layout_constraintTop_toBottomOf="@id/tvBonusToday"
            android:background="@color/color_bg_181523"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/sp"
            android:id="@+id/tvHistory"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            xmlns:bind="http://schemas.android.com/tools"
            bind:adapter="@{adapter}"
            bind:submitList="@{vm.listLive}"
            bind:emptyImageResource="@{@drawable/img_history_empty}"
            bind:emptyText="@{`暂无收益记录`}"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvHistory"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>