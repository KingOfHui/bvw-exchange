<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColorPrimary"
    android:orientation="vertical">

    <include layout="@layout/lay_head_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/editGray"
        android:lineHeight="25dp"
        android:padding="10dp"
        android:text="强烈建议您将助记词抄写在纸上并保存在只有你知道的安全地方，任何人得到助记词都可以消费您的数字资产"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/lightBlue"
        android:gravity="center|left"
        android:lineHeight="25dp"
        android:padding="10dp"
        android:text="助记词用于恢复你的钱包，丢失他们你将永远失去钱包"
        android:textColor="@color/appColorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="长按下方助记词，可复制到剪切板。"
        android:textColor="@color/txtGray" />


    <TextView
        android:id="@+id/wallet_create_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/editGray"
        android:lineHeight="25dp"
        android:padding="10dp"
        android:text="monkey phone day monkeymonkey phone day monkeymonkey phonemonkey daymonkey monkeymonkey phone day "
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@color/lightBlue"
        android:text="下一步"
        android:textColor="@color/appColorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>
